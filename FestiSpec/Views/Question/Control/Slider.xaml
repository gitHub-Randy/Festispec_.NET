<UserControl x:Class="FestiSpec.Views.Question.Control.Slider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FestiSpec.Views.Question.Control"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             DataContext="{Binding OptionHandlerViewModel, Source={StaticResource Locator}}">

    <StackPanel VerticalAlignment="Center" Margin="0,0,5,0">
        <!--<TextBlock Text="Slider Omschrijving:"></TextBlock>
        <TextBox Margin="0,0,0,5" Text="{Binding OptionText}" TextWrapping="Wrap" AcceptsReturn="True" Height="Auto"></TextBox>-->
        <TextBlock Text="Voorbeeld Slider (schaal van 1 tot 10)"></TextBlock>
        <Slider IsEnabled="False" IsSnapToTickEnabled="True" Value="4" Minimum="1" Maximum="10" TickPlacement="Both"  TickFrequency="1" />
    </StackPanel>
</UserControl>
