@model FestiSpec.Entity.EmployeeAccount

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

@using (Html.BeginForm("Login", "Home", FormMethod.Post))
{
<fieldset>
    <br />
    <img class="mb-4 mx-auto d-block" src="../Images/FestiSpecLogo.png" height="300" width="300">

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @if (@ViewBag.Message != null)
    {
        <div style="color: red">
            @ViewBag.Message
        </div>
    }
    <br />
    Gebruikersnaam
    @Html.TextBoxFor(a => a.Username, new { @class = "form-control" })
    @Html.ValidationMessageFor(a => a.Username, "", new { @style = "color:red" })
    <br />
    Wachtwoord
    @Html.PasswordFor(a => a.Password, new { @class = "form-control" })
    @Html.ValidationMessageFor(a => a.Password, "", new { @style = "color:red" })
    <br />

    <button class="btn btn-lg btn-primary btn-block" type="submit">Login</button>
</fieldset>
}